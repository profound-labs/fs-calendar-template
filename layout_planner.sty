\newcommand*\moonformat[1]{{\color{gold}\moonsize #1}}
\newcommand*\astromoonformat[1]{{\color{gold}\astromoonsize #1}}
\newcommand*\astromoonformatlight[1]{{\color{gold!60}\astromoonsize #1}}

\newcommand{\MyMoon}[1]{%
\ifthenelse{#1=1}{\moonformat{\CIRCLE}}{}% new
\ifthenelse{#1=2}{\moonformat{\LEFTcircle}}{}% waxing
\ifthenelse{#1=3}{\moonformat{\Circle}}{}% full
\ifthenelse{#1=4}{\moonformat{\RIGHTcircle}}{}% waning
}

\newcommand{\MyAstroMoon}[1]{%
\ifthenelse{#1=1}{\astromoonformatlight{\CIRCLE}}{}% new
\ifthenelse{#1=2}{\astromoonformatlight{\LEFTcircle}}{}% waxing
\ifthenelse{#1=3}{\astromoonformat{\Circle}}{}% full
\ifthenelse{#1=4}{\astromoonformatlight{\RIGHTcircle}}{}% waning
}

